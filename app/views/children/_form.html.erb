<%= form_with(model: child) do |form| %>
  <% if child.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(child.errors.count, "error") %> prohibited this child from being saved:</h2>

      <ul>
        <% child.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :baby_name %>
    <%= form.text_field :baby_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :parent_name %>
    <%= form.text_field :parent_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :date_of_birth %>
    <%= form.date_field :date_of_birth, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :gender %>
    <%= form.text_field :gender, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :phone_number, "Phone Number (start with 2547...)" %>
    <%= form.number_field :phone_number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :weight, "Weight in KGs" %>
    <%= form.number_field :weight, class: "form-control" %>
  </div>
  <br />
  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
  </div>
</form>
<% end %>